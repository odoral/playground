<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-5.0.xsd">

    <!--Endpoint-->
    <int:gateway service-interface="com.droidandroid.playground.springintegration.gateways.PrinterGateway" default-request-channel="inputChannel">
        <int:method name="print"/>
    </int:gateway>

    <bean id="customRouter" class="com.droidandroid.playground.springintegration.routers.CustomRouter"/>

    <int:router ref="customRouter" input-channel="inputChannel"/>

    <!--Channels-->
    <int:channel id="inputChannel"/>
    <int:channel id="defaultChannel"/>
    <int:channel id="strChannel"/>
    <int:channel id="intChannel"/>

    <!--Endpoints-->
    <int:service-activator ref="defaultPrintService" input-channel="defaultChannel" method="print"/>
    <int:service-activator ref="printStringService" input-channel="strChannel" method="print"/>
    <int:service-activator ref="printIntegerService" input-channel="intChannel" method="print"/>

    <!--Services-->
    <bean id="defaultPrintService" class="com.droidandroid.playground.springintegration.services.DefaultPrintService"/>
    <bean id="printStringService" class="com.droidandroid.playground.springintegration.services.PrintStringService"/>
    <bean id="printIntegerService" class="com.droidandroid.playground.springintegration.services.PrintIntegerService"/>

</beans>