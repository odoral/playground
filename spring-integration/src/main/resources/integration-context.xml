<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-5.0.xsd">

    <!--Endpoint-->
    <int:gateway service-interface="com.droidandroid.playground.springintegration.gateways.PrinterGateway" default-request-channel="inputChannel">
        <int:method name="print"/>
    </int:gateway>

    <bean id="interceptor" class="com.droidandroid.playground.springintegration.interceptors.CustomChannelInterceptor"/>

    <!--Channel-->
    <int:channel id="inputChannel">
        <int:queue capacity="10"/>
        <int:interceptors>
            <int:ref bean="interceptor"/>
        </int:interceptors>
    </int:channel>

    <!--Endpoint-->
    <int:service-activator ref="reverseService" input-channel="inputChannel" method="reverse">
        <int:poller fixed-rate="5" time-unit="SECONDS" max-messages-per-poll="2"/>
    </int:service-activator>

    <!--Services-->
    <bean id="printService" class="com.droidandroid.playground.springintegration.services.PrintService"/>
    <bean id="reverseService" class="com.droidandroid.playground.springintegration.services.ReversePrintService"/>

</beans>